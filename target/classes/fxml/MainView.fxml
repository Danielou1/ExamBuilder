<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">
    <top>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <HBox spacing="10">
                <Label text="Titel der Klausur:" />
                <TextField fx:id="examTitleField" />
                <Label text="Modul:" />
                <TextField fx:id="moduleField" />
            </HBox>
            <HBox spacing="10">
                <Label text="Lehrperson:" />
                <TextField fx:id="teacherField" />
                <Label text="Semester:" />
                <TextField fx:id="semesterField" />
            </HBox>
        </VBox>
    </top>
    <center>
        <TreeTableView fx:id="questionsTable" BorderPane.alignment="CENTER">
            <columns>
                <TreeTableColumn fx:id="titleColumn" prefWidth="150.0" text="Titel" />
                <TreeTableColumn fx:id="typeColumn" prefWidth="100.0" text="Typ" />
                <TreeTableColumn fx:id="pointsColumn" prefWidth="75.0" text="Punkte" />
            </columns>
        </TreeTableView>
    </center>
    <right>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label text="Frage bearbeiten" />
            <TextField fx:id="questionTitleField" promptText="Titel" />
            <TextField fx:id="questionTextField" promptText="Aufgabentext" />
            <TextField fx:id="questionPointsField" promptText="Punkte" />
            <TextField fx:id="questionTypeField" promptText="Typ (z.B. Offen, MC)" />
            <Button onAction="#addQuestion" text="Frage hinzufügen" />
            <Button onAction="#addSubQuestion" text="Sub-Frage hinzufügen" />
            <Button onAction="#updateQuestion" text="Frage aktualisieren" />
            <Button onAction="#deleteQuestion" text="Frage löschen" />
        </VBox>
    </right>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <Label fx:id="totalPointsLabel" text="Gesamtpunkte: 0" />
            <Button onAction="#exportToWord" text="Exportieren als .docx" />
            <Button onAction="#saveExamToJson" text="Speichern als JSON" />
            <Button onAction="#importExamFromJson" text="Importieren von JSON" />
        </HBox>
    </bottom>
</BorderPane>
